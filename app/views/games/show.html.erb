<h1>Game Details</h1>

<table>
  <% (0..7).each do |row| %>
    <tr>
      <% (0..7).each do |col| %>
        <td>
          <%= render_piece(row, col) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if @game.forfeit %>
  <p>Game forfeited</p>
<% else %>
  <%= form_for(@game, url: forfeit_game_path(@game), method: :put) do |f| %>
    <%= f.submit "Forfeit"%>
  <% end %>
<% end %>

